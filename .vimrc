set ignorecase
set smartcase

set autoindent
set mouse=a
set number
set visualbell
set nowrap
set lines=200

set shiftwidth=4
set softtabstop=4
set expandtab
set tabstop=4

syntax enable

set showcmd
set cmdheight=1

set incsearch
set hlsearch

set paste
set autoread

set diffopt+=iwhite

inoremap jj <Esc>

inoremap <Esc> <Nop>

colorscheme molokai
let g:molokai_original = 1

